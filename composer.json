{
    "name": "storyblok/php-client",
    "description": "Storyblok Client to easily call the publishing api",
    "type": "library",
    "keywords": ["storyblok"],
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.3.0",
        "guzzlehttp/guzzle": "^7.4",
        "apix/cache": "^1.3",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4.0",
        "pestphp/pest": "1.21.2",
        "phpstan/phpstan": "1.9.x-dev"
    },
    "authors": [
        {
            "name": "Alexander Feiglstorfer",
            "email": "delooks@gmail.com"
        },
        {
            "name": "Dominik Angerer",
            "email": "dominikangerer1@gmail.com"
        }
    ],
    "autoload": {
        "psr-0": {
            "Storyblok": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Storyblok\\Tests\\": [
                "tests",
                "tests/Storyblok/"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "phpstan": "phpstan analyse",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix --allow-risky=yes",
        "all-check": [
            "@format",
            "@test"
        ]
    }
}
